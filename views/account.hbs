<h2>Edit your profile</h2>
<form action="/users" method="POST">
  <div class="form-group">
    <label for="first">First Name:</label>
    <input type="text" class="form-control" name="first" id="first" value="{{ firstName }}" required>
  </div>
  <div class="form-group">
    <label for="last">Last Name:</label>
    <input type="text" class="form-control" name="last" id="last" value="{{ lastName }}" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" name="email" id="email" value="{{ email }}" required>
  </div>
  <div class="file-field input-field" style="margin-bottom: 1rem;">
    <img id="output" style="width: 200px; height: 200px;" src="/uploads/{{img}}" alt="person" />
  </div>
  <button class="btn btn-primary">Update</button>
</form>

<p><a href="/users/{{email}}" target="_blank">View your profile</a></p>
